{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["endpoints"],
  "properties": {
    "endpoints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "method"],
        "properties": {
          "path": {"type": "string"},
          "method": {"type": "string"},
          "description": {"type": "string"},
          "handler": {"type": "object"}
        }
      }
    }
  }
}
